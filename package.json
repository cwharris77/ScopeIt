{
  "name": "scopedin",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "mobile",
    "web",
    "shared"
  ],
  "scripts": {
    "web:dev": "npm run dev -w web",
    "web:build": "npm run build -w web",
    "web:lint": "npm run lint -w web",
    "mobile:start": "npm run start -w mobile",
    "mobile:ios": "npm run ios -w mobile",
    "mobile:android": "npm run android -w mobile",
    "mobile:lint": "npm run lint -w mobile",
    "mobile:typecheck": "npm run typecheck -w mobile",
    "generate-types": "npx supabase gen types typescript --project-id ouscsamzunholiaysnor 2>/dev/null > shared/types/supabase.ts",
    "functions:deploy": "supabase functions deploy",
    "functions:serve": "supabase functions serve --env-file supabase/.env --no-verify-jwt",
    "test": "vitest run && jest",
    "test:watch": "vitest",
    "test:changed": "vitest run --changed",
    "test:mobile": "jest",
    "test:mobile:watch": "jest --watch",
    "test:all": "vitest run && jest"
  },
  "overrides": {
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/react-native": "^13.3.3",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@vitejs/plugin-react": "^5.1.4",
    "jest": "^29.7.0",
    "jest-expo": "^54.0.17",
    "jsdom": "^28.1.0",
    "react-test-renderer": "^19.1.0",
    "vitest": "^4.0.18"
  }
}
